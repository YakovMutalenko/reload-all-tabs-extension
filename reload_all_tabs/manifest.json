{
  "name": "Reload All Tabs",
  "version": "0.4",
  "description": "Reload all tabs using quick keyboard shortcut: ctrl + shift + r, as well, you can reload all windows by enabling it in options.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background_page": "background.html",
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["keyboard_handler.js"]
    }
  ]
}
