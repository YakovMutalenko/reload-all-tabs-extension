{
  "name": "Bookmark all tabs",
  "version": "0.2",
  "description": "Bookmark all tabs using quick keyboard shortcut: ctrl + shift + d",
  "update_url": "http://mohamedmansour.com/chrome/extensions/bookmark_all_tabs/updates.xml",
  "permissions": [
    "http://*/*", 
    "https://*/*"
  ],
  "background_page": "background.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["keyboard_handler.js"]
    }
  ],
  "permissions": [
    "tabs",
    "bookmarks"
  ]
}